{
    "compilerOptions": {
        "module": "commonjs",
        "target": "ES2021",
        // "moduleResolution": "node",
        "esModuleInterop": true,
        "rootDir": "./src/",
        "baseUrl": "./",
        "outDir": "./build",
        "noImplicitAny": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "resolveJsonModule": true,
    },
    "include": ["src/**/*"]
}
