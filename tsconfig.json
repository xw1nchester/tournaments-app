{
    "compilerOptions": {
        "target": "ES2021",
        "module": "commonjs",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "rootDir": "./src/",
        "baseUrl": "./src",
        "outDir": "./build",
        "noImplicitAny": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "resolveJsonModule": true,
        "typeRoots": ["@types"]
    },
    "include": ["src", "@types"]
}
